    <title>Practice</title>
</head>

<body>
    <h2>Employee Information Form</h2>

    <form>

        <fieldset>
            <legend>
                <h1><b><i>Personal Details</i></b></h1>
            </legend>
            <label for="empid">EmployeeID</label>
            <input type="text" id="empid" value="E12345" readonly required>
            <br>
            <br>
            <label for="firstName">First Name :</label>
            <input type="text" id="firstName" placeholder="Enter your firstname" autofocus required>
            <br>
            <br>
            <label for="lasttName">last Name :</label>
            <input type="text" id="lastName" placeholder="Enter your Lastname" autofocus required>
            <br><br>
            <label for="dob">Enter your DOB</label>
            <input type="date" id="dob" min="2005-01-01" required>
            <br><br>

            <label>Gender:</label>
            <input type="radio" id="male" name="gender" value="male" required> Male
            <input type="radio" id="female" name="gender" value="female" required> FeMale
            <input type="radio" id="other" name="gender" value="Other" required> Other
            <br><br>

            <label for="contact">Enter your number</label>
            <input type="tel" id="contact" placeholder="9876543210" pattern="[0-9]{10}" maxlength="10" required>
            <br><br>
            <label>Enter your email</label>
            <input type="email" id="email" placeholder="Eg: suresh@gmail.com" required>
            <br><br>

        </fieldset>

        <!-- Address Section -->
        <br><br>
        <fieldset>
            <h1><b><i>Address</i></b></h1>
            <label for="permanentAddress">permanentAddress</label>
            <textarea id="permanentAddress" rows="3" cols="40" required>
        </textarea>
            <br><br>

            <label for="state">state</label>
            <select id="state" required>
                <option value="">--Enter your state--</option>
                <option value="KA">Karnataka</option>
                <option value="AP">Andhrapradesh</option>

            </select>
            <br><br>
            <!--Experience Details -->
        </fieldset>

        <br><br>
        <fieldset>
            <legend>
                <h1><b><i>Professional Details</i></b></h1>
            </legend>
            <label id="doj">Date of Joining</label>
            <input type="date" id="doj" required><br><br>

            <label for="exp">Total Experience in years</label>
            <input type="number" id="exp" min="0" max="40" required> <br><br>

            <label for="resume">Upload your Resume</label>
            <input type="file" id="resume" accept=".pdf,.doc,.docx" multiple required> <br><br>

        </fieldset>


        <!-- Bank Details -->

        <fieldset>
            <legend>
                <h1><b><i>Bank Details</i></b></h1>
            </legend>

            <label for="bankName">BankName</label>
            <input type="text" id="bankName" name="bankName" required><br><br>

